<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pizarra"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/descriptionProblem"
        android:hint="DescripciÃ³n del problema"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/c_redond"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:text="A)"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />

            <Button
                android:id="@+id/first_clicked"
                android:background="@drawable/c_redond"
                android:layout_width="250dp"
                android:layout_height="60dp"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:text="B)"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />

            <Button
                android:id="@+id/second_clicked"
                android:background="@drawable/c_redond"
                android:layout_width="250dp"
                android:layout_height="60dp"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:text="C)"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />

            <Button
                android:id="@+id/third_clicked"
                android:background="@drawable/c_redond"
                android:layout_width="250dp"
                android:layout_height="60dp"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:text="D)"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            />

            <Button
                android:id="@+id/fourth_clicked"
                android:background="@drawable/c_redond"
                android:layout_width="250dp"
                android:layout_height="60dp"
                />
    </LinearLayout>

    <Button
        android:id="@+id/submit_exam_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_enviar"
        android:text="ENVIAR"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />


</LinearLayout>